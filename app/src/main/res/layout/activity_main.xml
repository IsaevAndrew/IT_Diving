<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">
        <ImageButton
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="10"
            android:src="@drawable/chat"/>
        <ImageButton
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:src="@drawable/group"
            android:layout_weight="75"/>
        <ImageButton
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:src="@drawable/swap"
            android:layout_weight="10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="100">
        <TextView
            android:id="@+id/firsttext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:layout_margin="2dp"
            android:drawableTop="@mipmap/first_round"
            android:background="@drawable/first_person"
            android:text="@string/first"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:drawableBottom="@drawable/notmic"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center|bottom"
            />
        <TextView
            android:id="@+id/secondtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:layout_margin="2dp"
            android:drawableTop="@mipmap/second_round"
            android:text="@string/second"
            android:gravity="center|bottom"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:drawableBottom="@drawable/notmic"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/second_person"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:background="@color/black"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/cam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@drawable/camera"
            android:src="@drawable/notvideo"/>
        <ImageButton
            android:id="@+id/mic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@drawable/camera"
            android:src="@drawable/notmic"/>
        <ImageButton
            android:id="@+id/hand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@drawable/buttonhand"
            android:src="@drawable/hand"/>
        <ImageButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@drawable/stop"
            android:src="@drawable/phone"/>
    </LinearLayout>
</LinearLayout>
